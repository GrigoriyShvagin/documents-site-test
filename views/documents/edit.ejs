<%- include('../partials/head', { title }) %> <%- include('../partials/header')
%>

<div class="container">
  <h1>Редактировать документ</h1>

  <% if (error) { %>
  <div class="alert alert-error"><%= error %></div>
  <% } %>

  <form
    action="/documents/<%= document.id %>/update"
    method="POST"
    class="document-form"
  >
    <div class="form-group">
      <label for="title">Название документа*</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= document.title %>"
        required
      />
    </div>

    <div class="form-group">
      <label for="description">Описание</label>
      <textarea id="description" name="description" rows="3">
<%= document.description || '' %></textarea
      >
    </div>

    <div class="form-group">
      <label for="content">Содержимое документа</label>
      <textarea id="content" name="content" rows="10">
<%= document.content || '' %></textarea
      >
      <small>Пока работаем с текстом, PDF добавим позже</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Сохранить изменения</button>
      <a href="/documents/<%= document.id %>" class="btn btn-outline">Отмена</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
