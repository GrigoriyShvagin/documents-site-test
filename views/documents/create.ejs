<!DOCTYPE html>
<html lang="ru">
  <head>
    <%- include('../partials/head', { title }) %>
  </head>
  <body>
    <%- include('../partials/header') %>

    <main>
      <div class="container">
        <h1>Добавить документ</h1>

        <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
        <% } %>

        <form method="POST" action="/documents/create" class="document-form">
          <div class="form-group">
            <label for="title">Название документа*</label>
            <input type="text" id="title" name="title" required />
          </div>

          <div class="form-group">
            <label for="description">Описание</label>
            <textarea id="description" name="description" rows="3"></textarea>
          </div>

          <div class="form-group">
            <label for="content">Содержимое документа</label>
            <textarea
              id="content"
              name="content"
              rows="10"
              placeholder="Введите текст документа..."
            ></textarea>
            <small>Пока работаем с текстом, PDF добавим позже</small>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              Создать документ
            </button>
            <a href="/documents" class="btn btn-outline">Отмена</a>
          </div>
        </form>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
